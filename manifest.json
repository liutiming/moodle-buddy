{
  "manifest_version": 2,
  "name": "Moodle Buddy",
  "version": "1.5",
  "description": "Moodle Buddy offers additional helpful functionality to the moodle learning management platform.",
  "homepage_url": "https://github.com/marcelreppi/moodle-buddy",
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": ["https://*/*", "activeTab", "downloads", "storage"],
  "browser_action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_title": "Moodle Buddy",
    "default_popup": "./dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./shared/browser-polyfill.js"]
    },
    {
      "matches": ["*://*/course/view.php?id=*"],
      "js": ["./content_scripts/crawler.js"]
    },
    {
      "matches": ["*://*/my*"],
      "js": ["./content_scripts/startPage.js"]
    }
  ],
  "background": {
    "page": "./background_scripts/scripts.html"
  },
  "applications": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/marcelreppi/moodle-buddy/master/update.json"
    }
  }
}
